<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.czy.car_client.view.user.LoginController"
          prefHeight="275.0" prefWidth="300.0" hgap="10" vgap="10" alignment="CENTER">
    <padding><Insets top="25" right="25" bottom="10" left="25" /></padding>
    <Text text="欢迎登录" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <Label text="帐号：" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField promptText="输入手机号" GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="mobileField"/>

    <Label text="密码：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField promptText="输入您的密码" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="pwField"/>
    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="登录" onAction="#login" />
        <Button text="注册" onAction="#regist" />
    </HBox>

    <Text fx:id="msgText" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="6" fill="orangered"/>

</GridPane>
